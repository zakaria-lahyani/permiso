# Development Environment Configuration for Permiso Authentication System

# Environment
ENVIRONMENT=development
DEBUG=true

# Build Configuration
BUILD_TARGET=development
INSTALL_DEV=true

# Server Configuration
APP_PORT=8000

# Database Configuration
POSTGRES_DB=permiso_dev
POSTGRES_USER=permiso_dev
POSTGRES_PASSWORD=permiso_dev_password
POSTGRES_PORT=5432
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=0
DATABASE_ECHO=true

# Redis Configuration
REDIS_PORT=6379
REDIS_DB=0

# JWT Configuration - Development (not secure)
JWT_SECRET_KEY=dev-secret-key-not-for-production-use-only
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Security Configuration - Relaxed for development
PASSWORD_MIN_LENGTH=6
PASSWORD_REQUIRE_UPPERCASE=false
PASSWORD_REQUIRE_LOWERCASE=false
PASSWORD_REQUIRE_DIGITS=false
PASSWORD_REQUIRE_SPECIAL=false

# Rate Limiting - Relaxed for development
RATE_LIMIT_LOGIN=1000/minute
RATE_LIMIT_REGISTER=1000/hour
RATE_LIMIT_API=10000/minute

# CORS Configuration - Permissive for development
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:3001","http://127.0.0.1:3000"]
ALLOWED_HOSTS=["localhost","127.0.0.1","*"]

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# API Documentation - Enabled for development
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json

# Development Tools
PGADMIN_PORT=5050
REDIS_COMMANDER_PORT=8081

# Monitoring - Basic for development
ENABLE_METRICS=true
METRICS_PATH=/metrics