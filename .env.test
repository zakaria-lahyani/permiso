# Testing Environment Configuration for Permiso Authentication System

# Environment
ENVIRONMENT=testing
DEBUG=true

# Build Configuration
BUILD_TARGET=testing
INSTALL_DEV=true

# Server Configuration
APP_PORT=8000

# Database Configuration
POSTGRES_DB=permiso_test
POSTGRES_USER=permiso_test
POSTGRES_PASSWORD=permiso_test_password
POSTGRES_PORT=5433
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=0
DATABASE_ECHO=false

# Redis Configuration
REDIS_PORT=6380
REDIS_DB=1

# JWT Configuration - Testing
JWT_SECRET_KEY=test-secret-key-for-testing-only-32chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Security Configuration - Relaxed for testing
PASSWORD_MIN_LENGTH=6
PASSWORD_REQUIRE_UPPERCASE=false
PASSWORD_REQUIRE_LOWERCASE=false
PASSWORD_REQUIRE_DIGITS=false
PASSWORD_REQUIRE_SPECIAL=false

# Rate Limiting - Relaxed for testing
RATE_LIMIT_LOGIN=1000/minute
RATE_LIMIT_REGISTER=1000/hour
RATE_LIMIT_API=10000/minute

# CORS Configuration - Permissive for testing
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080"]
ALLOWED_HOSTS=["localhost","127.0.0.1","*"]

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# API Documentation - Disabled for testing
DOCS_URL=
REDOC_URL=
OPENAPI_URL=

# Test-specific Configuration
PYTEST_CURRENT_TEST=true

# Monitoring - Basic for testing
ENABLE_METRICS=false
METRICS_PATH=/metrics